<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.ameet.gpa.ItemOneFragment">

    <android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.5"
                    android:layout_marginRight="8dp">
                    <TextView
                        style="@style/DarkBackground"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Current GPA" />
                    <EditText
                        android:id="@+id/prev_gpa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="13sp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:inputType="numberDecimal"
                        android:background="@drawable/border"
                        android:textColor="@android:color/black"
                        android:layout_weight="0.5" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.5">
                    <TextView
                        style="@style/DarkBackground"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Units Attempted" />
                    <EditText
                        android:id="@+id/prev_credits"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="13sp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:inputType="number"
                        android:background="@drawable/border"
                        android:textColor="@android:color/black" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">
                <TextView
                    style="@style/DarkBackground"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:layout_weight="0.16"
                    android:text="Course" />
                <TextView
                    style="@style/DarkBackground"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="0.16"
                    android:text="Units" />
                <TextView
                    style="@style/DarkBackground"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:layout_weight="0.16"
                    android:layout_marginLeft="8dp"
                    android:text="Projected Grade" />
                <TextView
                    style="@style/DarkBackground"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:layout_weight="0.16"
                    android:layout_marginLeft="8dp"
                    android:text="Repeat? Prev Grade" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/grade_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </LinearLayout>
            <Button
                android:id="@+id/add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/colorAccent"
                android:textColor="@android:color/white"
                android:text="Add"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/calculate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="@color/colorButton1"
                    android:layout_weight="0.5"
                    android:textColor="@android:color/white"
                    android:text="SUBMIT"/>
                <Button
                    android:id="@+id/reset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="@color/colorButton2"
                    android:layout_weight="0.5"
                    android:textColor="@android:color/white"
                    android:text="RESET"/>
            </LinearLayout>
            <TextView
                android:id="@+id/total_gpa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center"
                android:backgroundTint="@color/colorAlertSuccess"
                android:layout_marginTop="8dp"/>
            <TextView
                android:id="@+id/total_units"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center"
                android:backgroundTint="@color/colorAlertSuccess"
                android:layout_marginTop="8dp"/>
            <TextView
                android:id="@+id/total_grade_points"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center"
                android:backgroundTint="@color/colorAlertSuccess"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>
